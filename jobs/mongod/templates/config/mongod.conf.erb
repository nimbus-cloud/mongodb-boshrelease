systemLog:
   destination: file
   path: /var/vcap/sys/log/mongod/mongod.log
   quiet: false
   logAppend: true

storage:
  dbPath: /var/vcap/store/mongod
  directoryPerDB: true
  smallFiles: true
  quota:
    enforced: true
    maxFilesPerDB: 16
  <% if p('mongod.arbiter') %>
  journal:
    enabled: false
  <% else %>
  journal:
    enabled: true
  <% end %>

security:
  authorization: enabled
  keyFile: /var/vcap/jobs/mongod/config/mongod_replica_key

net:
  bindIp: <%= p("mongod.bindip") %>
  port: <%= p("mongod.port") %>

replication:
  replSetName: <%= p("mongod.replset_name") %>